package string_wordsubsets_psh;

import java.util.*;

class Solution {
	public int count(String str) {
		int[] result = new int[26];
		for (int i = 0; i < str.length(); i++) {
			result[str.charAt(i) - 'a']
		}
		return result;
	}
	
    public List<String> wordSubsets(String[] A, String[] B) {
        List<String> result = new ArrayList<String>();
        int len = 'z' - 'a' + 1;
        
        for (String a : A) {
        	// 카운트할 배열 생성
        	int[] a_count = new int[len];
        	boolean is_substr = true;
        	for (int i = 0; i < a.length(); i++) {
        		a_count[a.charAt(i) - 'a']++;
        	}
        	for (String b : B) {
        		int[] a_count_cpy = a_count.clone();
        		for (int i = 0; i < b.length(); i++) {
            		if (a_count_cpy[b.charAt(i) - 'a'] == 0) {
            			is_substr = false;
            			break;
            		}
        			a_count_cpy[b.charAt(i) - 'a']--;
        		}
        		if (is_substr == false)
        			break;
        	}
        	if (is_substr == true)
        		result.add(a);
        }
        return result;
    }
    
    public static void main(String[] args) {
		String[] A = {"amazon","apple","facebook","google","leetcode"};
		String[] B = {"e","oo"};
		
		System.out.println(new Solution().wordSubsets(A, B));
	}
}